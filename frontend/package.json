{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@apollo/client": "^3.8.4",
    "@apollo/react-hooks": "^4.0.0",
    "@craco/craco": "7.1.0",
    "@types/node": "^12.0.0",
    "@types/papaparse": "^5.2.6",
    "antd": "^4.15.2",
    "antd-button-color": "^1.0.4",
    "craco-less": "3.0.1",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.5",
    "graphql-ws": "^5.14.1",
    "keycloak-js": "12.0.4",
    "papaparse": "^5.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.2.2",
    "web-vitals": "^1.0.1",
    "ws": "^8.2.2"
  },
  "scripts": {
    "start": "craco start",
    "build-app": "craco build",
    "test": "craco test",
    "prepare": "cd .. && husky install frontend/.husky",
    "check-format-lint": "prettier --check **/*.{ts,tsx,js,jsx,json,css,graphql} && eslint . --ext .ts --ext .tsx --ext .js --ext .jsx --max-warnings=0",
    "pre-commit": "lint-staged",
    "generate": "curl https://graphql.preprod.crownlabs.polito.it/schema -o schema.graphql && graphql-codegen --config codegen.yml ; rm -f schema.graphql"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "rules": {
      "react/no-multi-comp": "error",
      "react/jsx-pascal-case": "error",
      "react/prop-types": "off",
      "no-nested-ternary": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "info"
          ]
        }
      ],
      "react/jsx-indent": "off",
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "**/generated-types.tsx"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.4",
    "@graphql-codegen/typescript-operations": "1.18.3",
    "@graphql-codegen/typescript-react-apollo": "2.2.8",
    "@tailwindcss/postcss7-compat": "npm:@tailwindcss/postcss7-compat",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "autoprefixer": "^9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8",
    "prettier": "^2.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "resolutions": {
    "babel-loader": "8.2.3"
  },
  "homepage": "/",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,graphql}": [
      "prettier --write"
    ],
    "!(generated-types.tsx)*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --ignore-pattern=!.storybook"
    ]
  }
}
